// app.config.js
import path from 'path';
import fs from 'fs';

const env = process.env.ENVFILE || '.env';
const envFile = path.resolve(env);

require('dotenv').config({ path: envFile });

export default ({ config }) => {

  let variantConfig = {};
  const appVariant = process.env.APP_VARIANT;

  if (appVariant) {
    try {
      const configPath = path.resolve(__dirname, `configs/${appVariant}.json`);
      variantConfig = JSON.parse(fs.readFileSync(configPath, 'utf8'));
    } catch (error) {
      console.error(`Error loading variant config for ${appVariant}:`, error);
    }
  }


  return {
    ...config,
    expo: {
